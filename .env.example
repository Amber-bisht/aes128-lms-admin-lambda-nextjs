
# ==============================================
# LMS Monorepo Environment Variables
# Copy this file to:
#   - apps/web/.env
#   - apps/api/.env
#   - apps/video-processor/.env (for local dev)
# ==============================================

# --- Database (Neon DB) ---
# Connection string to your Serverless Postgres
DATABASE_URL="postgresql://user:password@host:port/dbname?sslmode=require"

# --- Authentication (Google OAuth) ---
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# NextAuth Configuration
# Production: https://lms.amberbisht.me
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-random-secure-string-here"
# Shared JWT Secret for API verification
JWT_SECRET="generate-a-random-secure-string-here"

# --- AWS Infrastructure ---
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"

# S3 Buckets
S3_BUCKET_RAW="lms-raw-videos-dev"    # Private bucket for uploads
S3_BUCKET_PUBLIC="lms-public-content" # Public/Protected bucket for HLS streams

# --- Internal Microservices & URLs ---
# Used by Video Processor to callback to API
ADMIN_SERVICE_TOKEN="secure-token-for-lambda-to-api-communication"

# API URL (Used by Frontend & Lambda)
# Production: https://api.lms.amberbisht.me
API_URL="http://localhost:4000"
NEXT_PUBLIC_API_URL="http://localhost:4000"

# Frontend URL (Used by API for CORS)
# Production: https://lms.amberbisht.me
FRONTEND_URL="http://localhost:3000"
